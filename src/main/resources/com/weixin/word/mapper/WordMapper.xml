<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.weixin.word.mapper.WordMapper">

    <select id="countByword" resultType="java.lang.Integer">
      SELECT count(1) FROM words WHERE word = #{word}
    </select>

    <select id="qryWord" resultType="com.weixin.word.entity.Word">
      SELECT * FROM words
    </select>
</mapper>